<%= simple_form_for(@mecanico, html: { class: 'card p-4' }) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-group">
    <%= f.label :nome %>
    <%= f.input :nome, input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.label :endereco %>
    <%= f.input :endereco, input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <%= f.label :phone %>
    <%= f.input :phone, input_html: { class: 'form-control' } %>
  </div>

  <div class="form-group">
    <strong>Equipe</strong>
    <%= collection_select(:mecanico, :equipe_id, Equipe.all, :id, :nome, { prompt: true }, { class: 'form-control' }) %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class: 'btn btn-primary my-2' %>
  </div>
<% end %>
