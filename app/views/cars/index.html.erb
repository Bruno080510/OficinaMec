<div style="margin-left: 150px; padding: 15px;">
  <p class="alert alert-success text-black"><%= notice %></p>

  <h1>Cars</h1>
  <div class="py-2">
    <%= link_to "Adicionar carro", new_car_path, class: "btn btn-success" %>
  </div>

  <div class="table-responsive">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>Modelo</th>
          <th>Ano</th>
          <th>Ações</th>
        </tr>
      </thead>
      <tbody>
        <% @cars.each do |car| %>
          <tr>
            <td><%= car.modelo %></td>
            <td><%= car.ano %></td>
            <td>
              <div class="btn-group" role="group" aria-label="Actions">
                <%= link_to "", edit_car_path(car), class: "bi bi-pencil-square text-primary h4", title: "Editar", data: { toggle: "tooltip", placement: "top" } %>
                <%= link_to "", car, method: :delete, data: { confirm: 'Você tem certeza?' }, class: "bi bi-trash-fill text-danger mx-3 h4", title: "Excluir", data: { toggle: "tooltip", placement: "top" } %>              
                </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
