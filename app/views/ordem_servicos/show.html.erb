<div style="margin-left: 200px; padding: 15px;">
  <div class="mx-auto md:w-2/3 w-full flex">
    <div >
      <% if notice.present? %>
        <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
      <% end %>

      <%= render @ordem_servico %>

      <%= link_to "Edit this ordem_servico", edit_ordem_servico_path(@ordem_servico), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    
      <%= link_to "Back to ordem_servicos", ordem_servicos_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    </div>
  </div>
</div>