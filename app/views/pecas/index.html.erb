<div style="margin-left: 200px; padding: 15px;">

  <p style="color: green"><%= notice %></p>

  <h1>Pecas</h1>
    <%= link_to "New peca", new_peca_path, class:"btn btn-success my-2" %>


  <div id="pecas">
    <% @pecas.each do |peca| %>
      <%= render peca %>
      <p>
          <%= link_to "Edit this peca", edit_peca_path(peca), class:"btn btn-primary" %> |
        <%= link_to "Show this peca", peca %>
      </p>
    <% end %>
  </div>

</div>