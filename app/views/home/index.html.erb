<div class="container mt-4" style="margin-left: 165px; padding: 15px;">
  <% if notice.present? %>
    <div class="alert alert-success mb-4" role="alert">
      <%= notice %>
    </div>
  <% end %>

  <div class="row">
    <!-- Card for Total de Peças -->
    <div class="col-md-6 mb-4">
      <div class="card bg-primary text-white h-100">
        <div class="card-body">
          <h2 class="card-title text-2xl font-semibold">Total de Peças</h2>
          <p class="card-text text-3xl font-bold"><%= Peca.count %></p>
        </div>
      </div>
    </div>

    <!-- Card for Total de Serviços -->
    <div class="col-md-6 mb-4">
      <div class="card bg-success text-white h-100">
        <div class="card-body">
          <h2 class="card-title text-2xl font-semibold">Total de Serviços</h2>
          <p class="card-text text-3xl font-bold"><%= Servico.count %></p>
        </div>
      </div>
    </div>

    <!-- Card for Total de Clientes -->
    <div class="col-md-6 mb-4">
      <div class="card bg-warning h-100">
        <div class="card-body">
          <h2 class="card-title text-2xl font-semibold">Total de Clientes</h2>
          <p class="card-text text-3xl font-bold"><%= Oficina.count %></p>
        </div>
      </div>
    </div>

    <!-- Card for Total de Ordens de Serviço -->
    <div class="col-md-6 mb-4">
      <div class="card bg-danger text-white h-100">
        <div class="card-body">
          <h2 class="card-title text-2xl font-semibold">Total de Ordens de Serviço</h2>
          <p class="card-text text-3xl font-bold"><%= OrdemServico.count %></p>
        </div>
      </div>
    </div>

  </div>
</div>
