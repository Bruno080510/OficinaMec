<div class="container mt-4" style="margin-left: 200px; padding: 15px;">
  <h1 class="mb-4">Novo Servico</h1>

  <%= simple_form_for @servico, html: { class: 'd-flex flex-column' } do |form| %>
    <div class="mb-3">
      <%= form.input :tipoDeServico, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :valor, class: 'form-label', style: 'display: block' %>
      <%= form.number_field :valor, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.submit 'Save', class: 'btn btn-primary' %>
    </div>
  <% end %>

  <div>
    <%= link_to "Voltar", servicos_path, class: 'btn btn-secondary' %>
  </div>
</div>
